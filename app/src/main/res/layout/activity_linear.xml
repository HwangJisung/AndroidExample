<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinearActivity"
    android:orientation="vertical">
    <!-- LinearLayout은 방향성(orientation)을 가지고 있다.
         LinearLayout을 만들었다면 반드시 orientation 속성을 넣어줘야 한다. -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하이!"
        android:textSize="30dp"
        android:textColor="#fff"
        android:background="#000"/>
    <!-- dp : Device independent Pixel
         디바이스의 독립적인 픽셀값.
         안드로이드는 기종별 다양한 해상도를 고려하여
         dp단위를 사용하도록 권장하고 있다-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어서오세요!"
        android:background="#81F7F3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fdd"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="클릭"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="클릭2"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="클릭3"/>

    </LinearLayout>

    <CheckBox android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check1"/>
    <CheckBox android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check2"/>

    <!-- 라디오 버튼은 그룹에 묶여져 있어야 한다 -->
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여자"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남자"/>

    </RadioGroup>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아무 값이나 입력해 보세요"/>

</LinearLayout>